<div class="row">
  <div class="col-xs-offset-3 col-xs-6">
    <%= simple_form_for(@user, html: {class: "form-horizontal"}) do |f| %>
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :email %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>
      <%= f.submit "Create Account" %>
    <% end %>
  </div>
</div>
